@model PetShopProject.Models.Animal;

@{
    ViewData["Title"] = "Index";

}
<table class="table table-dark">
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>age:</th>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <th>Description:</th>
        <td>@Model.Descripition</td>
    </tr>
    <tr>
        <th> type:</th>
        <td>@Model.Category?.Name</td>
    </tr>
</table>
<h1 style="text-align:center"> comments section: </h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto">


            <table class=" table table-dark">
                <thead>
                    <tr>
                        <td>
                            comments
                        </td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.comments)
                    {
                        <tr>
                            <td>
                                @item.Descripition
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form method="post" asp-action="AddComment"  asp-route-AnimalId=@Model.AnimalId>
                <button @*asp-action="Details" asp-controller=" Catalog" asp-route-AnimalId="@Model.AnimalId"*@ type="submit"> add comment</button>
                <input type="text" name="comment" />
            </form>
        </div>
    </div>
</div>
